# Environment
ENVIRONMENT=development

# App
APP_NAME=AutoCash Ultimate
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ENCRYPTION_KEY=your-encryption-key-base64-32-bytes
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./data/autocash.db
# For production PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:pass@host:5432/dbname

# Redis
REDIS_URL=redis://redis:6379/0

# MeiliSearch
MEILI_HOST=http://meilisearch:7700
MEILI_MASTER_KEY=change-me-in-production

# Chroma Vector DB
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_PERSIST_DIR=./chroma_data

# Content Generation
REVIEW_REQUIRED=true
MIN_WORD_COUNT=700
MAX_WORD_COUNT=1200
SIMILARITY_THRESHOLD=0.85
GENERATION_BATCH_SIZE=5

# OpenAI (optional - for advanced generation)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Kill-Switch
KILLSWITCH_FILE=/tmp/killswitch.lock
KILLSWITCH_ENABLED=true

# Data Retention (days)
DATA_RETENTION_DAYS=365
LOG_RETENTION_DAYS=90

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@autocash.local

# Analytics
MATOMO_URL=
MATOMO_SITE_ID=
MATOMO_AUTH_TOKEN=

# Prometheus
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Cloudflare (for production)
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_ACCOUNT_ID=

# Oracle Cloud (for production)
ORACLE_TENANCY_ID=
ORACLE_USER_ID=
ORACLE_FINGERPRINT=
ORACLE_REGION=

# Admin
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=  # Generate with: python -c "from passlib.hash import argon2; print(argon2.hash('yourpassword'))"
ADMIN_2FA_ENABLED=false

# Feature Flags
ENABLE_PERSONALIZATION=false
ENABLE_AB_TESTING=false
ENABLE_POD_GENERATION=false
