# autocash-ultimate Environment Configuration
# Copy this file to .env and customize values
# NEVER commit .env file to repository!

# Application
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///autocash.db

# Security (MUST CHANGE IN PRODUCTION)
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand
ADMIN_TOKEN=your-admin-token-here-generate-with-openssl-rand
IP_SALT=your-ip-salt-here-generate-with-openssl-rand

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Content Generation
REVIEW_REQUIRED=true
MIN_ARTICLE_WORDS=700
MAX_ARTICLE_WORDS=1200

# Privacy & LGPD
DATA_RETENTION_DAYS=365
CONSENT_REQUIRED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Monitoring
ENABLE_METRICS=true

# Kill Switch (for emergencies)
KILL_SWITCH_ENABLED=false

# Optional: External Services (leave empty if not used)
OPENAI_API_KEY=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
