# Production environment configuration
# Copy to .env and customize for production deployment

# CRITICAL: Generate strong secrets before production!
# Use: openssl rand -hex 32

# Application
ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://autocash_user:CHANGE_ME@localhost:5432/autocash_db

# Security - MUST CHANGE IN PRODUCTION
SECRET_KEY=GENERATE_WITH_openssl_rand_hex_32
ADMIN_TOKEN=GENERATE_WITH_openssl_rand_hex_32
IP_SALT=GENERATE_WITH_openssl_rand_hex_32

# CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Content Generation
REVIEW_REQUIRED=true
MIN_ARTICLE_WORDS=700
MAX_ARTICLE_WORDS=1200

# Privacy & LGPD
DATA_RETENTION_DAYS=365
CONSENT_REQUIRED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Monitoring
ENABLE_METRICS=true

# Kill Switch (for emergencies)
KILL_SWITCH_ENABLED=false

# External Services (optional)
OPENAI_API_KEY=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Backup
BACKUP_DIR=/var/backups/autocash
RETENTION_DAYS=30

# Oracle Object Storage (optional)
OCI_BUCKET=

# Cloudflare
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_API_TOKEN=
